-- Activar claves foráneas
-- ===============================
PRAGMA foreign_keys = ON;

-- ===============================
-- Creación de tablas
-- ===============================

-- Tabla Categorias
DROP TABLE IF EXISTS Categorias;
CREATE TABLE Categorias (
    id_categoria INTEGER PRIMARY KEY AUTOINCREMENT,
    nombre_categoria TEXT NOT NULL,
    descripcion TEXT
);

-- Tabla Vinos
DROP TABLE IF EXISTS Vinos;
CREATE TABLE Vinos (
    id_vino INTEGER PRIMARY KEY AUTOINCREMENT,
    nombre_vino TEXT NOT NULL,
    marca TEXT NOT NULL,
    id_categoria INTEGER NOT NULL,
    precio REAL NOT NULL,
    stock INTEGER DEFAULT 0,
    FOREIGN KEY(id_categoria) REFERENCES Categorias(id_categoria)
);

-- Tabla Usuarios
DROP TABLE IF EXISTS Usuarios;
CREATE TABLE Usuarios (
    id_usuario INTEGER PRIMARY KEY AUTOINCREMENT,
    nombre TEXT NOT NULL,
    apellido TEXT NOT NULL,
    email TEXT UNIQUE NOT NULL,
    tipo_usuario TEXT CHECK(tipo_usuario IN ('cliente','trabajador')) NOT NULL,
    contrasena TEXT NOT NULL
);

-- Tabla MetodosPago
DROP TABLE IF EXISTS MetodosPago;
CREATE TABLE MetodosPago (
    id_metodo INTEGER PRIMARY KEY AUTOINCREMENT,
    nombre_metodo TEXT NOT NULL
);

-- Tabla Ventas
DROP TABLE IF EXISTS Ventas;
CREATE TABLE Ventas (
    id_venta INTEGER PRIMARY KEY AUTOINCREMENT,
    id_usuario INTEGER NOT NULL,
    id_vino INTEGER NOT NULL,
    cantidad INTEGER NOT NULL,
    total REAL NOT NULL,
    fecha_venta TEXT DEFAULT (datetime('now','localtime')),
    id_metodo_pago INTEGER NOT NULL,
    FOREIGN KEY(id_usuario) REFERENCES Usuarios(id_usuario),
    FOREIGN KEY(id_vino) REFERENCES Vinos(id_vino),
    FOREIGN KEY(id_metodo_pago) REFERENCES MetodosPago(id_metodo)
);

